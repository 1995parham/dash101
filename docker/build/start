#!/bin/sh

INPUT=${LIVE_BASE}${LIVE_CHANN_ID}
echo "Removing ${DIR} files"
rm -f ${DIR}/*
echo "Streaming $INPUT"

ffmpeg -analyzeduration 3000000 -f mpegts -i "$INPUT" -map a:0 -map v:0 -map v:0 -c:a libfdk_aac -c:v libx264 \
        -b:v:0 1M -b:v:1 300k -s:v:1 qvga \
        -use_timeline 1 -use_template 1 \
        -window_size 5 -adaptation_sets "id=0,streams=v id=1,streams=a" \
        -remove_at_exit 1 \
        -f dash "${DIR}/${LIVE_CHANN_ID}.mpd"
